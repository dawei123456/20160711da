<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<script type="text/javascript" src="js/jquery-1.10.2.min.js" ></script>
		<script type="text/javascript">
		var pen
			$(function(){
			    pen = $("#hc").get(0).getContext("2d");
				
				setInterval(function(){
					draw();
				},1000);
			});
			
			function draw(){
				pen.clearRect(0,0,300,300);//清空
				pen.shadowColor = "#000";
				pen.shadowBlur = 10;
				
				for (var i = 0;i < 10;i++) {
					var x = Math.floor(Math.random()*300);
					var y = Math.floor(Math.random()*300);
					pen.fillStyle = randomColor();//随机填充颜色
					pen.beginPath();
					pen.rect(x,y,20,20);
					pen.fill();
					pen.closePath();
				}
			}
			function randomColor(){
				return '#' + ('00000'+(Math.random()*0x1000000<<0).toString(16)).slice(-6);
			}
		</script>
	</head>
	<body>
		<canvas id="hc" width="300px" height="300px" style="background-color: #eee"></canvas>
	</body>
</html>
